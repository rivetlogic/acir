<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>with-dependencies</id>
    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory></outputDirectory>
            <includes>
                <include>log4j.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>mule-config.xml</include>
                <include>application-context.xml</include>
                <include>product.xsd</include>
                <include>query.xsd</include>
                <include>cma-cfg.properties</include>
                <include>*xslt*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/classes/xslt</directory>
            <outputDirectory>xslt</outputDirectory>
            <includes>
                <include>*.xslt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes></includes>
            <excludes>
                <exclude>*integration*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>